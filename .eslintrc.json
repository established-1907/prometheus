{
    "env": {
        "es2021": true,
        "node": true
    },
    "plugins": [
        "prettier",
        // "import",
        "tape"
    ],
    "extends": [
        "standard",
        "plugin:prettier/recommended",
        "plugin:n/recommended" // ,
        // "plugin:import/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "strict": [
            "error",
            "global"
        ],
        "no-var": "error",
        "curly": "warn",
        "semi": [
            "error",
            "always"
        ],
        "no-tabs": [
            "off",
            "always"
        ],
        "new-cap": "off",
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "variables": false
            }
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "time",
                    "timeEnd"
                ]
            }
        ],
        "require-jsdoc": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "max-len": [
            "error",
            {
                "code": 125,
                "ignoreComments": true,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "complexity": [
            "warn",
            {
                "max": 10
            }
        ],
        "n/exports-style": [
            "warn",
            "module.exports"
        ],
        "n/file-extension-in-import": [
            "error",
            "always"
        ],
        "n/prefer-global/process": [
            "warn",
            "always"
        ],
        "n/prefer-global/url-search-params": [
            "error",
            "always"
        ],
        "n/prefer-global/url": [
            "error",
            "always"
        ],
        "n/no-deprecated-api": "error",
        "n/no-unpublished-import": [
            "warn",
            {
                "allowModules": [
                    "tape"
                ]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "tape/assertion-message": [
            "error",
            "always"
        ],
        "tape/max-asserts": [
            "error",
            8
        ],
        "tape/no-identical-title": "error",
        "tape/no-statement-after-end": "error",
        "tape/test-title": [
            "error",
            "if-multiple"
        ]
        // "tape/no-ignored-test-files": "error",
        // "tape/no-only-test": "error",
        // "tape/no-skip-test": "error",
        // "tape/no-unknown-modifiers": "error",
        // "tape/test-ended": "error",
        // "tape/use-t-well": "error",
        // "tape/use-t": "error",
        // "tape/use-tap": "error"
    }
}